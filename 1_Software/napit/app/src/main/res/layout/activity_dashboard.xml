<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.fitnessapp2.DashboardActivity">
   <ImageButton
       android:id="@+id/sleepicon"
       android:layout_width="100dp"
       android:src="@drawable/sleep2"
       android:layout_height="100dp"
       android:layout_marginLeft="2dp"
       android:layout_marginRight="5dp"
       android:layout_marginTop="101dp"
       android:layout_weight="1"
       android:adjustViewBounds="true"
       android:padding="20dp"
       android:scaleType="fitCenter"
       android:layout_marginStart="45dp"
       android:layout_alignParentTop="true"
       android:layout_alignParentStart="true" />
    <ImageButton
        android:id="@+id/exerciseicon"
        android:layout_width="100dp"
        android:src="@drawable/exercise"
        android:layout_height="100dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:clickable="true"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:layout_marginEnd="38dp"
        android:layout_alignTop="@+id/sleepicon"
        android:layout_alignParentEnd="true" />
   <ImageButton
       android:id="@+id/foodicon"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:src="@drawable/food"
       android:layout_marginLeft="2dp"
       android:layout_marginRight="5dp"
       android:layout_marginTop="37dp"
       android:layout_weight="1"
       android:adjustViewBounds="true"
       android:padding="20dp"
       android:scaleType="fitCenter"
       android:layout_below="@+id/sleepicon"
       android:layout_alignStart="@+id/sleepicon" />
    <ImageButton
        android:id="@+id/vsicon"
        android:src="@drawable/vs"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/foodicon"
        android:layout_alignStart="@+id/exerciseicon" />
    <ImageButton
        android:id="@+id/sugicon"
        android:src="@drawable/suggestions"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:layout_below="@+id/vsicon"
        android:layout_toEndOf="@+id/foodicon" />

    <ImageButton
        android:id="@+id/sqldebug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/sugicon"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/settings_icon"
        android:src="@drawable/settings"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/vsicon" />
</RelativeLayout>

